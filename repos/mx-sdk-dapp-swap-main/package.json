  },
  "dependencies": {
    "anchorme": "2.1.2",
    "bech32": "2.0.0",
    "bignumber.js": "9.x",
    "formik": "2.2.9",
    "sass": "1.54.0",
    "yup": "0.32.11"
  }
}
